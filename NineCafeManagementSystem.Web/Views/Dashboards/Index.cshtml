@model NineCafeManagementSystem.Web.Models.Dashboards.DashboardVM

@{
    ViewData["Title"] = "Dashboard";
    var today = DateOnly.FromDateTime(DateTime.Today);
}

<h1>Nine Cafe</h1>
<h5>Sales for @Model.SelectedDate.ToString("dd-MM-yyyy")</h5>

<!-- Date Picker -->
<form method="get" class="mb-3">
    <label for="date" class="form-label">View Sales For: </label>
    <input type="date" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" class="form-control" style="width: auto; display: inline-block;" />
    <button type="submit" class="btn btn-secondary btn-sm ms-2">Go</button>
</form>

<!-- Price Buttons (Responsive Row) -->
@if (Model.SelectedDate == today)
{
    <div class="row g-2 mb-4">
        @foreach (var item in Model.PriceTiers)
        {
            <div class="col-auto">
                <form asp-action="RecordSale" method="post" class="d-inline">
                    <input type="hidden" name="priceRiel" value="@item.PriceRiel" />
                    <button type="submit" class="btn btn-outline-primary btn-lg px-4">
                        @item.PriceRiel
                    </button>
                </form>
            </div>
        }
    </div>
}

<!-- Sales Table -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Price</th>
            <th>Cups Sold</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PriceTiers)
        {
            var qty = Model.TodaySales.TryGetValue(item.Id, out var q) ? q : 0;
            <tr>
                <td>@item.PriceRiel</td>
                <td>@qty</td>
                <td>
                    <a href="#" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>