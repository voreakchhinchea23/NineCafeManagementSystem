@model IEnumerable<DeptsReadOnlyVM>

@{
    ViewData["Title"] = "Debt History";
    int number = 1;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0">Customer Debt's History</h1>
    <div class="d-flex gap-1">
        <a asp-action="Index" class=" btn btn-secondary">Back</a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Customer</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@number</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                                @item.CustomerName
                            </a>
                        </td>
                        <td>@item.Amount.ToString("N0") Riel</td>
                        <td>@item.DeptDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.IsPaid)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white">Unpaid</span>
                            }
                        </td>
                        <td class="text-end">
                            
                            @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-1">Edit</a> *@
                            <button class="btn btn-sm btn-danger mb-1 btnDelete" data-id="@item.Id">Delete</button>
                        </td>
                    </tr>

                    number++;
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info d-flex align-items-center">
        <i class="bi bi-info-circle me-2"></i>
        No debt records found.
    </div>
}


<form asp-action="Delete" id="deleteForm">
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        $(function(){
            $('.btnDelete').click(
                function(e){
                    swal({
                        title: "Delete this?",
                        text: "Are you sure you want delete this?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }).then((confirm) => {
                        if(confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#deleteId').val(id);
                            $('#deleteForm').submit();
                        }
                    });
                }
            );
        });
    </script>
}