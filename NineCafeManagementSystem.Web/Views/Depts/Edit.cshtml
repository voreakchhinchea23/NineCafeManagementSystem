@model DeptsUpdateVM

@{
    ViewData["Title"] = "Edit Debt";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0">Edit Debt</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control" placeholder="Customer name" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="Amount in Riel" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DeptDate" class="form-label"></label>
                <input asp-for="DeptDate"
                       class="form-control"
                       type="date"
                       max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DeptDate" class="text-danger"></span>
            </div>

           

            <div class="d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}