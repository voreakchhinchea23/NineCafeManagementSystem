@inject SignInManager<ApplicationUser> SignInManager

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Nine Cafe</title>
    <link rel="shortcut icon" type="image/png" href="~/images/logos/cofee.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
    <link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NineCafeManagementSystem.Web.styles.css" asp-append-version="true" />

</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">

        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar" data-simplebar>
                <div class="d-flex mb-4 align-items-center justify-content-between">
                    <a asp-controller="Dashboards" asp-action="Index" class="text-nowrap logo-img ms-0 ms-md-1">
                        <img src="~/images/logos/cafe.png" width="100" alt=""> Nine Cafe
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                
                    <nav class="sidebar-nav">
                        <ul id="sidebarnav" class="mb-4 pb-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-5"></i>
                                <span class="hide-menu">Dashboard</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link primary-hover-bg"
                                   asp-controller="Dashboards" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-primary rounded-3">
                                        <iconify-icon icon="solar:atom-line-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Dashboard</span>
                                </a>
                            </li>

                            <!--Managements-->
                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-5"></i>
                                <span class="hide-menu">Management</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link warning-hover-bg"
                                   asp-controller="Suppliers" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-warning rounded-3">
                                        <iconify-icon icon="solar:layers-minimalistic-bold-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Supplier</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link danger-hover-bg"
                                   asp-controller="Depts" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-danger rounded-3">
                                        <iconify-icon icon="solar:danger-circle-line-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Debt</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link success-hover-bg"
                                   asp-controller="PriceTiers" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-success rounded-3">
                                        <iconify-icon icon="solar:bookmark-square-minimalistic-line-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Price</span>
                                </a>
                            </li>
                        }
                        
                        @if (User.IsInRole(Roles.Admin))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link primary-hover-bg"
                                   asp-controller="Expenses" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-primary rounded-3">
                                        <iconify-icon icon="solar:file-text-line-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Expense</span>
                                </a>
                            </li>


                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link indigo-hover-bg"
                                   asp-controller="Reports" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-indigo rounded-3">
                                        <iconify-icon icon="solar:chart-line-duotone" class=""></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Reports</span>
                                </a>
                            </li>

                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link primary-hover-bg"
                                   asp-controller="Users" asp-action="Index"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-primary rounded-3">
                                        <iconify-icon icon="solar:shield-user-line-duotone" class=""></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">User</span>
                                </a>
                            </li>

                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-5"></i>
                                <span class="hide-menu">Auth</span>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link sidebar-link warning-hover-bg"
                                   asp-area="Identity" asp-page="/Account/Login"
                                   aria-expanded="false">
                                    <span class="aside-icon p-2 bg-light-warning rounded-3">
                                        <iconify-icon icon="solar:login-3-line-duotone"></iconify-icon>
                                    </span>
                                    <span class="hide-menu ms-2 ps-1">Login</span>
                                </a>
                            </li>
                        }
                        </ul>
                    </nav>
                
               
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->

        
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        
                    </ul>
                    
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                                <li class="nav-item dropdown">
                                    <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        @if (User.IsInRole(Roles.Admin))
                                        {
                                            <img src="~/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                        }
                                        else
                                        {
                                            <img src="~/images/profile/user-2.jpg" alt="" width="35" height="35" class="rounded-circle">
                                        }


                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                        <div class="message-body">
                                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-flex align-items-center gap-2 dropdown-item">
                                                <i class="ti ti-user fs-6"></i>
                                                <p class="mb-0 fs-3">My Profile</p>
                                            </a>
                                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboards", new { area = "" })">
                                                <button type="submit" class="btn btn-outline-primary mx-3 mt-2 d-block shadow-none">Logout</button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                    
                    
                </nav>
            </header>
            <!--  Header End -->
           
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>