@model ExpenseReadOnlyVM

@{
    ViewData["Title"] = "Expense Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0">Expense Details</h1>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">Date</dt>
            <dd class="col-sm-9">@Model.ExpenseDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 fw-bold">Amount</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("N0")</dd>

            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            @if (!string.IsNullOrEmpty(Model.Other))
            {
                <dt class="col-sm-3 fw-bold">Notes</dt>
                <dd class="col-sm-9 text-muted">@Model.Other</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>