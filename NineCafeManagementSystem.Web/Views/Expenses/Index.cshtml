@model IEnumerable<ExpenseReadOnlyVM>

@{
    ViewData["Title"] = "Expenses";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0">Expenses for @DateTimeFormatInfo.CurrentInfo.GetMonthName(ViewBag.SelectedMonth) @ViewBag.SelectedYear</h1>
</div>

<!-- Month/Year Selector -->
<form method="get" class="row mb-4 g-2">
    <div class="col-auto">
        <select name="month" class="form-select">
            @foreach (int m in ViewBag.Months)
            {
                <option value="@m" selected="@(m == ViewBag.SelectedMonth)">@DateTimeFormatInfo.CurrentInfo.GetMonthName(m)</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <select name="year" class="form-select">
            @foreach (int y in ViewBag.Years)
            {
                <option value="@y" selected="@(y == ViewBag.SelectedYear)">@y</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary btn-sm">Go</button>
    </div>
</form>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create new</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    
                    <th>@Html.DisplayNameFor(model => model.ExpenseDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                    <th>@Html.DisplayNameFor(model => model.AmountInUSD)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Other)</th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">@item.ExpenseDate.ToString("dd/MM/yyyy")</a>
                        </td>
                        <td>@item.Amount.ToString("N0")</td>
                        <td>@item.AmountInUSD.ToString("C2")</td>
                        <td>@item.Description</td>
                        <td class="text-muted">@item.Other</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-0 mb-1">Edit</a>
                            <button class="btn btn-sm btn-danger mb-1 btnDelete " data-id="@item.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        No expenses recorded yet.
    </div>
}

<form asp-action="Delete" id="expForm">
    <input type="hidden" name="id" id="expId" />
</form>

@section Scripts {
    <script>
        $(function(){
            $('.btnDelete').click(
                function(e){
                    swal({
                        title: "Confirm Delete?",
                        text: "Are you sure you want to delete this expense?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }).then((confirm) => {
                        if(confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#expId').val(id);
                            $('#expForm').submit();
                        }
                    });
                }
            );
        });
    </script>
}