@model IEnumerable<SupplierReadOnlyVM>

@{
    ViewData["Title"] = "Supplier";

    var index = 1;
}

<h1>Supplier's List</h1>
@if (User.IsInRole(Roles.Admin))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<div class="table-responsive">
    <table class="table  table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactInfo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductType)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@index</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductType)
                    </td>
                    <td class="text-end">
                        @if (User.IsInRole(Roles.Admin))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-1">Edit</a>
                            <button class="btn btn-sm btn-danger btnDelete mb-1" data-id="@item.Id">Delete</button>
                        }
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>


<form asp-action="Delete" id="supForm">
    <input type="hidden" name="id" id="supId" />
</form>

@section Scripts {
    <script>
        $(function(){
            $('.btnDelete').click(
                function(e){
                    swal({
                        title: "Confirm Delete?",
                        text: "Are you sure you want to delete this supplier?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }).then((confirm) => {
                        if(confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#supId').val(id);
                            $('#supForm').submit();
                        }
                    });
                }
            );
        });
    </script>
}

